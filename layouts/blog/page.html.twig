{% extends '_default/page.html.twig' %}

{% block content %}
	<section class="section">
		<div class="container">
			<div class="columns">
				<div class="column is-10 is-offset-1">
					<h1 class="title">{{ page.title }}</h1>
					<nav
						class="level">
						<!-- Left side -->
						<div class="level-left">
							<div class="level-item">
								<h2 class="subtitle">Reading time:
									{{ readtime(page.content) }}
									min</h2>
							</div>
						</div>
						<!-- Right side -->
						<div class="level-right">
							<div class="level-item">
								Posted in&nbsp;<i class="far fa-folder"></i>&nbsp;
								{% with %}
								{% set category=page.categories.0 %}
								<a href="{{ url('categories/'~category) }}">
									{{ category }}
								</a>
								{% endwith %}
							</div>
						</div>
					</nav>
					<figure class="image is-16by9">
						<img src="{{ url(page.image) }}">
					</figure>
					<div class="content is-medium">
						<p>
							{{ page.content }}
						</p>
						<hr>
					</div>
					<nav
						class="level">
						<!-- Left side -->
						<div class="level-left">
							<div class="level-item">
								Last modified on
								{{ page.updated|date('j M Y H:i') }}.
							</div>
						</div>
						<!-- Right side -->
						<div class="level-right">
							<div class="level-item">
								<i class="fas fa-tags"></i>
							</div>
							<div class="level-item">
								{% if page.tags %}
									<div class="tags">
										{% for tag in page.tags %}
											<span class="tag is-rounded">
												<a href="{{ url('tags/'~tag) }}">
													{{ tag }}
												</a>
											</span>
										{% endfor %}
									</div>
								{% endif %}
							</div>
						</div>
					</nav>
				</div>
			</div>
		</div>
	</section>
{% endblock content %}
