{% extends '_default/page.html.twig' %}

{% block content %}
	<section class="section">
		<div class="container">
			<div class="columns">
				<div class="column is-10 is-offset-1">
					<h1 class="title">{{ page.title }}</h1>
					<nav class="level">
						<!-- Left side -->
						<div class="level-left">
						{% if page.website is defined %}
							<div class="level-item">
								<h2 class="subtitle">
                                <span><i class="fas fa-external-link-alt"></i></span> 
                                <span>
                                <a href="{{ page.website }}" target="_blank">{{ page.website }}</a>
                                </span>
                                </h2>
							</div>
						{% endif %}
						</div>
						<!-- Right side -->
						<div class="level-right">
                        	<div class="level-item">
								<h2 class="subtitle">
                                <span><i class="far fa-folder"></i></span>
                                <span>
                                {% with %}
								{% set category=page.categories.0 %}
								<a href="{{ url('categories/'~category) }}">
									{{ category }}
								</a>
								{% endwith %}
                                </span>
                                </h2>
							</div>
						</div>
					</nav>
					<figure class="image is-16by9">
						<img src="{{ url(page.image) }}">
					</figure>
					<div class="content is-medium">
						<p>
							{{ page.content }}
						</p>
						<hr>
					</div>
					<nav class="level">
						<!-- Left side -->
						<div class="level-left">
							<div class="level-item">
								Last modified on
								{{ page.updated|date('j M Y H:i') }}.
							</div>
						</div>
						<!-- Right side -->
						<div class="level-right">
							<div class="level-item">
								<i class="fas fa-tags"></i>
							</div>
							<div class="level-item">
								{% if page.tags %}
									<div class="tags">
										{% for tag in page.tags %}
											<span class="tag is-rounded">
												<a href="{{ url('tags/'~tag) }}">
													{{ tag }}
												</a>
											</span>
										{% endfor %}
									</div>
								{% endif %}
							</div>
						</div>
					</nav>
				</div>
			</div>
		</div>
	</section>
	<section class="section has-background-warning">
		<div class="container has-text-centered">
			<h2 class="title is-spaced">Interesting technologies ?</h2>
			<p class="subtitle">Drop me a message to discuss your next project.</p>
			<a class="button is-primary" href="{{ url('contact') }}">Contact Me</a>
		</div>
	</section>
{% endblock content %}
